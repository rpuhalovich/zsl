#ifndef RESULT_H
#define RESULT_H

#include "types.h"

%INCLUDE%

typedef enum {
    SUCCESS = 0,
    ERROR_UNEXPECTED,
    ERROR_OUT_OF_BOUNDS
} ErrorTypeInternal;

typedef i32 Error;

